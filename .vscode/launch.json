{
    "configurations": [
        {
            "name": "generate_data",
            "type": "python",
            "pythonPath": "${env:CONDA_PREFIX}/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/generate_lmd_data.py",
            "console": "integratedTerminal",
            "args": [
                "-i", "${workspaceFolder}/data/LMD-full-MIDI",
                "-o", "${workspaceFolder}/lmd_data"
            ],
            "subProcess": false
        },
        {
            "name": "fairseq_preprocess_mono_lyric",
            "type": "python",
            "pythonPath": "${env:CONDA_PREFIX}/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/preprocess.py",
            "console": "integratedTerminal",
            "args": [
                "--srcdict", "${workspaceFolder}/lmd_data/mono/dict.lyric.txt",
                "--trainpref", "${workspaceFolder}/lmd_data/mono/train",
                "--validpref", "${workspaceFolder}/lmd_data/mono/valid",
                "--destdir", "${workspaceFolder}/lmd_data/processed",
                "--workers", "20", "--source-lang", "lyric"  
            ],
            "subProcess": false
        },
        {
            "name": "fairseq_preprocess_mass",
            "type": "python",
            "pythonPath": "${env:CONDA_PREFIX}/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/preprocess.py",
            "console": "integratedTerminal",
            "args": [
                "--srcdict", "${workspaceFolder}/lmd_data/para/dict.melody.txt",
                "--tgtdict", "${workspaceFolder}/lmd_data/para/dict.lyric.txt",
                "--trainpref", "${workspaceFolder}/lmd_data/para/train",
                "--validpref", "${workspaceFolder}/lmd_data/para/valid",
                "--destdir", "${workspaceFolder}/lmd_data/processed",
                "--workers", "20", "--source-lang", "melody", "--target-lang", "lyric" 
            ],
            "subProcess": false
        },
        {
            "name": "train",
            "type": "python",
            "pythonPath": "${env:CONDA_PREFIX}/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "subProcess": false,
            "args": [
                "--config", "${workspaceFolder}/config.yml"
            ]
        },
        {
            "name": "debug",
            "type": "python",
            "pythonPath": "${env:CONDA_PREFIX}/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/debug.py",
            "console": "integratedTerminal",
            "subProcess": false,
            "args": [
                "--config", "${workspaceFolder}/config.yml"
            ]
        }
    ]
}
